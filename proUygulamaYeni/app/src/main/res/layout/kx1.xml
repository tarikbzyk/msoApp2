<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back12"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kullanıcı Adı :"
            android:textSize="16sp"
            android:id="@+id/textView"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Şifre :"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Şifre Tekrar :"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:id="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ad :"
            android:textSize="16sp"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Soyad :"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="E-Mail"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtKullaniciAdi"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtSifre"
            android:layout_marginRight="20dp"
            android:textSize="14dp"
            android:textAlignment="center"
            android:password="true"
            android:layout_above="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignLeft="@+id/editTextKayıtConfirm"
            android:layout_alignStart="@+id/editTextKayıtConfirm" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtAd"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignLeft="@+id/editTextKayıtConfirm"
            android:layout_alignStart="@+id/editTextKayıtConfirm" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtSoyad"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/editTextKayıtAd"
            android:layout_alignStart="@+id/editTextKayıtAd" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtMail"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView4"
            android:layout_alignLeft="@+id/editTextKayıtSoyad"
            android:layout_alignStart="@+id/editTextKayıtSoyad" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaydol"
            android:id="@+id/buttonkxKaydol"
            android:background="@drawable/butonanasayfa"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="104dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKayıtConfirm"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:password="true"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/editTextKayıtKullaniciAdi"
            android:layout_alignStart="@+id/editTextKayıtKullaniciAdi" />

        <Button
            android:background="@drawable/ic_lock_open_black_24dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonLogin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.8"
            />

    </RelativeLayout>



</RelativeLayout>

