<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back12"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Menu"
    tools:showIn="@layout/activity_me">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/butonanasayfa"
                android:drawableLeft="@drawable/ic_flight_black_24dp"
                android:onClick="Tiklendi1"
                android:paddingLeft="15dp"
                android:text="Ucak"
                android:paddingRight="38dp"
                />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/butonanasayfa"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:onClick="Tiklendi1"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:text="Otel"
                android:paddingRight="38dp"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/butonanasayfa"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                android:onClick="Tiklendi1"
                android:paddingLeft="15dp"
                android:text="Arac"
                android:paddingRight="38dp"
                />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/buttonanasayfa1"
                android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                android:onClick="Tiklendi1"
                android:paddingLeft="15dp"
                android:text="Sepet"
                android:paddingRight="38dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_person_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoşgeldin" />

                    <TextView
                        android:id="@+id/kullaniciGiris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Kullanıcı Adı"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



</RelativeLayout>
